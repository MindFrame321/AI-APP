{
  "manifest_version": 3,
  "name": "Focufy",
  "version": "1.0.0",
  "description": "AI-powered focus extension that blocks distracting elements on websites based on task relevance",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "alarms",
    "scripting",
    "activeTab",
    "identity",
    "notifications",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://focufy-extension-1.onrender.com/*"
  ],
  "optional_host_permissions": [],
  "oauth2": {
    "client_id": "42484888880-o3h9svrq1cp5u53hhlrooeohmin89pci.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "background": {
    "service_worker": "background/service_worker.js",
    "type": "module"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "rules_1",
        "enabled": true,
        "path": "rules/rules_1.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["https://www.google.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["youtube_focus.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Focufy - Stay Focused"
  },
  "options_page": "settings.html",
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "analytics.html", "help.html", "gamification.js"],
      "matches": ["<all_urls>"]
    }
    
  ]
}